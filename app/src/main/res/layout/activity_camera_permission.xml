<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/oneplusrewards6"
    android:layout_height="match_parent"
    tools:context="com.convalida.user.jsonparsing.LocationPermission">



    <TextView
        android:id="@+id/locationText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/camera_access_text"
        android:textColor="#fff"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/locationText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_above="@id/locationText2"
        android:layout_marginBottom="20dp"
        android:text="@string/camera_access_heading"
        android:textColor="#fff"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/locationText1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cameraimg"/>

    <Button
        android:id="@+id/enableCameraBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationText2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#fff"
        android:text="@string/enable_camera_button"
        android:textColor="@color/colorAccent"
        android:textSize="15sp" />
</RelativeLayout>